@model MyWebApp2.Models.Vocstack

@{
    ViewData["Title"] = "Delete";
}

<h1>刪除單字庫</h1>

<h3>你確定要刪除此單字庫?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            單字庫名稱
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StackName)
        </dd>
        <dt class = "col-sm-2">
            單字數量
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumOfVoc)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-danger" />
        <a class="btn btn-light border border-secondary" asp-action="Index">返回</a>
    </form>
</div>
