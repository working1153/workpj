@model IEnumerable<MyWebApp2.Models.ScBoard>


<form asp-action="Index2">
    <select name="StackId">
        @foreach (var item in (List<Vocstack>)ViewData["Vocstack"]) {
            <option value=@item.Id>@item.StackName</option>
        }
    </select>
    <input class="btn btn-primary" type="submit" value="查詢">
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                分數
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StackId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StackId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                    @if (User.IsInRole("admin")) {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action = "Details" asp-route-id = "@item.Id" > Details </a>      
                        <a asp-action = "Delete" asp-route-id = "@item.Id" > Delete </a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
